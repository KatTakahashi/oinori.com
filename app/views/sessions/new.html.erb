<div class="bg-img-form">
  <section class="login-admin wrapper">
    <h2 class="section-title white">管理者ログイン</h2>

    <%= form_with model: @session, local: true do |f| %>
      <%= flash[:danger] %>
      <table id="form-admin">
        <tr>
          <th class="white"><%= f.label :namae, '名前' %></th>
          <td><%= f.text_field :name %></td>
        </tr>
        <tr>
          <th class="white"><%= f.label :password, 'パスワード' %></th>
          <td><%= f.password_field :password %></td>
        </tr>
        <tr>
          <td colspan="2"><%= f.submit 'ログイン' %></td>
        </tr>
      </table>
    <% end %>
  </section>
  <% if logged_in? %>
    <section class="wrapper">
      <h2 class="section-title">サイト利用者数</span></h2>
      <table id="table-visiters">
        <tr>
          <th class="right">Total：</th>
          <td class="right"><%= @visiters.count %></td>
          <td>アクセス</td>
        </tr>
        <tr>
          <th class="right">Total：</th>
          <td class="right"><%= @visiters_ip.count %></td>
          <td>名の利用</td>
        </tr>
        <tr>
          <th class="right">本日：</th>
          <td class="right"><%= @visiters_today.count %></td>
          <td>アクセス</td>
        </tr>
        <tr>
          <th class="right">本日：</th>
          <td class="right"><%= @visiters_today_ip.count %></td>
          <td>名の利用</td>
        </tr>
      </table>
    <% end %>
  </section>
</div>