<h1>お祈り.com</h1>
<h2>お祈り</h2>
  <%= form_with model: @post, local: true do |f| %>
    <%= f.label :お祈り文%><br>
    <%= f.text_area :body %><br>
    <%= f.submit "投稿" %><br>
  <% end %>
<h2>お祈り一覧</h2>
  <% @posts.each do |post| %>
    <%= post.body %>
    <%= link_to "face-grin-tears", post_lols_path(post.id), method: :post %>
    <%= post.lols.count %>
    <%= link_to "削除", post_path(post.id), method: :delete %><br>
  <% end %>