<!-- ========== 部分テンプレート：each文内の共通コード ========== -->
<div class = "flex-index">
  <div class="flex-left">
    <!-- ---------- lolボタン ---------- -->
    <div class = "lol_<%= post.id %> btn-lol">
      <%= render partial: "lols/lol", locals: { post: post} %>
    </div>

    <!-- ---------- 感情スコア ---------- -->
    <div class="sentiment-score">
      <span>辛辣度：</span>
      <% score = post.score %>
      <% if score == -1.0 || score == -0.9 %>
        100%
      <% elsif score == -0.8 || score == -0.7 %>
        90%
      <% elsif score == -0.6 %>
        80%
      <% elsif score == -0.5  %>
        70%
      <% elsif score == -0.4 %>
        60%
      <% elsif score == -0.3 %>
        50%
      <% elsif score == -0.2 %>
        40%
      <% elsif score == -0.1 %>
        30%
      <% elsif score == 0.0 %>
        20%
      <% elsif score == 0.1 %>
        10%
      <% else %>
        0%
      <% end %>
    </div>

    <!-- ---------- 削除ボタン ---------- -->
    <!--条件：管理者ログイン中 or 投稿者(IPアドレスで判断)-->

    <% if logged_in? %>
      <div class="btn-delete">
        <%= link_to post_path(post.id), method: :delete, data: {confirm: "本当に削除しますか"} do %>
          <p>削除</p>
        <% end %>
      </div>

      <div class="x-small">
        <%= post.ip %>
      </div>

      <div>
        <%= link_to "編集", edit_post_path(post) %>
      </div>

    <% elsif post.ip == request.ip %>
      <div class="btn-delete">
        <%= link_to post_path(post.id), method: :delete, data: {confirm: "本当に削除しますか"} do %>
          <p>削除</p>
        <% end %>
      </div>
    <% end %>
  </div>

  <!-- ---------- 投稿文 ---------- -->
  <div class = "flex-right">
    <%= post.body %>
  </div>
</div>

